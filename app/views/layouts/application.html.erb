<!DOCTYPE html>
<html>
  <head>
    <title>Ipo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-3'>
          <a href='/'>
            <%=image_tag('home_page.png', :class =>'center', :alt =>'home logo', :style =>'width:120px')%>
          </a>
        </div>
        <div class=' text-center col-sm-6'>
          <h3><b><%= current_user.name if current_user%></b></h3>
        </div>
        <div class=' text-right col-sm-2'>
          <%=image_tag('ipo_logo.png', :class =>'center', :alt =>'home logo', :style =>'width:80px')%>
        </div>
        <div class='col-sm-1'>
          <% if current_user %>
            <%= link_to "Logout", '/logout' %>
          <% else %>
          <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
          <% end %>
        </div>
      </div>
    <br><br>
    <%= yield %>
  </div>
  </body>
</html>
